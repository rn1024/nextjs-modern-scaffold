# Web Information
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WEB_URL="http://localhost:3000"
NEXT_PUBLIC_PROJECT_NAME="NextJS Modern Scaffold"

# -----------------------------------------------------------------------------
# Database with Supabase
# -----------------------------------------------------------------------------
# https://supabase.com/docs/guides/getting-started/quickstarts/nextjs
# Set your Supabase URL and Anon Key
SUPABASE_URL="your_supabase_url"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# -----------------------------------------------------------------------------
# Auth with next-auth
# https://authjs.dev/getting-started/installation?framework=Next.js
# Set your Auth URL and Secret
# Secret can be generated with `openssl rand -base64 32`
# -----------------------------------------------------------------------------
AUTH_SECRET="your_auth_secret"
NEXT_PUBLIC_AUTH_URL="http://localhost:3000"

# Google Auth
# https://authjs.dev/getting-started/providers/google
AUTH_GOOGLE_ID="your_google_client_id"
AUTH_GOOGLE_SECRET="your_google_client_secret"
NEXT_PUBLIC_AUTH_GOOGLE_ID="your_google_client_id"
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED="false"
NEXT_PUBLIC_AUTH_GOOGLE_ONE_TAP_ENABLED="false"

# Github Auth
# https://authjs.dev/getting-started/providers/github
AUTH_GITHUB_ID="your_github_client_id"
AUTH_GITHUB_SECRET="your_github_client_secret"
NEXT_PUBLIC_AUTH_GITHUB_ENABLED="false"

# -----------------------------------------------------------------------------
# AI Integration
# -----------------------------------------------------------------------------
# OpenAI API Key for AI features
OPENAI_API_KEY="your_openai_api_key"

# -----------------------------------------------------------------------------
# Analytics (Optional)
# -----------------------------------------------------------------------------
# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""

# -----------------------------------------------------------------------------
# Internationalization
# -----------------------------------------------------------------------------
NEXT_PUBLIC_LOCALE_DETECTION="true"
NEXT_PUBLIC_DEFAULT_LOCALE="en"